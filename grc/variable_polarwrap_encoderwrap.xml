<?xml version="1.0"?>
<block>
  <name>Polar Encoder Variable</name>
  <key>variable_polarwrap_encoderwrap</key>
  <category>[Polar]</category>
  <import>import polarwrap</import>
  <var_make>#if int($ndim())==0 #
self.$(id) = $(id) = polarwrap.encoderwrap.make($block_size, $frozen_bit_positions, $frame_size, $error_detection_type) #slurp
#else if int($ndim())==1 #
self.$(id) = $(id) = map((lambda a: polarwrap.encoderwrap.make($block_size, $frozen_bit_positions, $frame_size, $error_detection_type)), range(0, $dim1)) #slurp
#else
self.$(id) = $(id) = map((lambda b: map((lambda a: polarwrap.encoderwrap.make($block_size, $frozen_bit_positions, $frame_size, $error_detection_type)), range(0, $dim2))), range(0, $dim1)) #slurp
#end if</var_make>
  <var_value>polarwrap.encoderwrap.make($block_size, $frozen_bit_positions, $frame_size, $error_detection_type)</var_value>
  <make></make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->


  <param>
    <name>Parallelism</name>
    <key>ndim</key>
    <value>0</value>
    <type>enum</type>
    <option>
      <name>0</name>
      <key>0</key>
    </option>
    <option>
      <name>1</name>
      <key>1</key>
    </option>
    <option>
      <name>2</name>
      <key>2</key>
      </option>
  </param>

  <param>
    <name>Dimension 1</name>
    <key>dim1</key>
    <value>1</value>
    <type>int</type>
    <hide>#if (int($ndim()) >= 1) then 'none' else 'all' #</hide>
  </param>

  <param>
    <name>Dimension 2</name>
    <key>dim2</key>
    <value>4</value>
    <type>int</type>
    <hide>#if (int($ndim()) >= 2) then 'none' else 'all' #</hide>
  </param>

  <param>
    <name>Block size</name>
    <key>block_size</key>
    <type>int</type>
  </param>

  <param>
    <name>Frozen bit positions</name>
    <key>frozen_bit_positions</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>Frame size</name>
    <key>frame_size</key>
    <type>int</type>
  </param>

  <param>
    <name>Error detection type</name>
    <key>error_detection_type</key>
    <type>int</type>
  </param>


</block>
